{
  "scripts": {
    "build": "npm-run-all --parallel build:*",
    "build:css": "NODE_ENV=production ./node_modules/tailwindcss/lib/cli.js -o ./static/main.css --minify",
    "build:hugo": "hugo --minify",
    "dev": "npm-run-all --parallel dev:*",
    "dev:css": "NODE_ENV=development ./node_modules/tailwindcss/lib/cli.js -o ./static/main.css -w",
    "dev:hugo": "hugo server"
  },
  "dependencies": {
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.0.24"
  }
}
